<%= form_for(@expense_entry) do |f| %>
  <%= render "form_errors" %>


  <div class="form-group">
    <%= f.label :date %><br>
    <%= f.date_select :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :expense_id, "Expense Category" %><br>
    <%= collection_select(:expense_entry, :expense_id, Expense.all, :id, :name) %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: "form-control", size: "30x3" %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
